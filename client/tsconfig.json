{
  "compilerOptions": {
    "target": "esnext",                // Target modern JavaScript
    "lib": ["dom", "dom.iterable", "esnext"], // Support DOM APIs and latest JS features
    "allowJs": true,                   // Allow JavaScript files in the project
    "skipLibCheck": true,              // Skip type checking for third-party libraries
    "esModuleInterop": true,           // Compatibility with ES module imports
    "allowSyntheticDefaultImports": true, // Allow default imports from modules without default export
    "strict": true,                    // Enable all strict type checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "noFallthroughCasesInSwitch": true, // Disallow fallthrough in switch statements
    "module": "node16",                // Match the resolution strategy
    "moduleResolution": "node16",      // Use Node.js resolution strategy
    "resolveJsonModule": true,         // Allow importing JSON files
    "isolatedModules": true,           // Ensure each file can be transpiled in isolation
    "noEmit": true,                    // Prevent TypeScript from emitting JavaScript files
    "jsx": "react-jsx",                // Use React JSX transform
    "baseUrl": ".",                    // Base URL for module resolution
    "paths": {
      "@shadcn/ui": ["node_modules/@shadcn/ui/dist/index.d.ts"] // Path alias for shadcn
    }
  },
  "include": ["src"],                  // Include the `src` folder
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
